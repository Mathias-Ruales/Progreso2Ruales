<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progreso2Ruales.Info"
             Title="Info">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <BoxView Color="Pink"
                 WidthRequest="400"/>
        <BoxView Grid.Column="1"
                 Color="Yellow" 
                 WidthRequest="400"/>
        <BoxView Grid.Row="1"
                 Color="Yellow"
                 WidthRequest="400"/>
        <BoxView Grid.Column="1"
                 Grid.Row="1"
                 Color="Pink"
                 WidthRequest="400"/>
        
        <Label Text="Nombre: Mathias Ruales"
           FontSize="30"
           TextColor="Black"
           WidthRequest="200" />
        <Label Grid.Column="1"
           Text="Fecha 06/05/2025" 
           FontSize="30"
           TextColor="Black"
           WidthRequest="200"/>
        <Label Grid.Row="1"
           Text="Intereses: Star Wars, Spider-Man, Daredevil"
           FontSize="30"
           TextColor="Black"
           WidthRequest="200"/>
        <Label Grid.Column="1"
           Grid.Row="1"
           Text="Version: 1.0"
           FontSize="30"
           TextColor="Black"
           WidthRequest="200"/>
    </Grid>
</ContentPage>