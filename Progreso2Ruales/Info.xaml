                    <Label Text="1.0" 
                           TextColor="Black"                           
                           FontSize="16" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

        </Grid>
    </StackLayout>
</ContentPage>
