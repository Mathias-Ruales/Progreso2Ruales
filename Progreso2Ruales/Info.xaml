<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progreso2Ruales.Info"
             Title="Info">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Grid RowSpacing="10" ColumnSpacing="10"
              WidthRequest="300" HeightRequest="300">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0"
                    Stroke="Black"
                    StrokeThickness="2"
                    BackgroundColor="Pink"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center">
                    <Label Text="Nombre:" 
                           TextColor="Black"                           
                           FontAttributes="Bold" 
                           FontSize="18"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    <Label Text="Mathias Ruales" 
                           TextColor="Black"                           
                           FontSize="16" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <Border Grid.Row="0" Grid.Column="1"
                    Stroke="Black"
                    StrokeThickness="2"
                    BackgroundColor="Yellow"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center">
                    <Label Text="Fecha:" 
                           TextColor="Black"
                           FontAttributes="Bold" 
                           FontSize="18" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
         
                    <Label Text="06/05/2025" 
                           TextColor="Black"
                           FontSize="16" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <Border Grid.Row="1" Grid.Column="0"
                    Stroke="Black"
                    StrokeThickness="2"
                    BackgroundColor="Yellow"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center">
                    <Label Text="Intereses:" 
                           TextColor="Black"                           
                           FontAttributes="Bold" 
                           FontSize="18"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    <Label Text="Star Wars, Spider-Man, Daredevil" 
                           TextColor="Black"                           
                           FontSize="16" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <Border Grid.Row="1" Grid.Column="1"
                    Stroke="Black"
                    StrokeThickness="2"
                    BackgroundColor="Pink"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center">
