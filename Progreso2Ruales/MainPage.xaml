<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progreso2Ruales.MainPage">

    <StackLayout
        Spacing="20"
        Padding="20"
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <Label
            Text="Bienvenido a la aplicacion de Mathias Ruales"
            FontAttributes="Bold"
            FontSize="32"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
        <Image
            Source="https://static.wikia.nocookie.net/nintendo/images/d/d2/Super_Mushroom_Spirit_SSBU.png/revision/latest?cb=20201018031322&amp;path-prefix=en"
            WidthRequest="150"
            HeightRequest="150"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
        <Button
            x:Name="Chistes"
            Text="Chistes" 
            Clicked="Chistes_Clicked"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
        <Button
            x:Name="Info"
            Text="Info" 
            Clicked="Info_Clicked"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </StackLayout>
</ContentPage>
